<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Profile Image:</strong>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image %>
  <% else %>
    <span class="no-image-rectangle">no image</span>
  <% end %>
</p>

